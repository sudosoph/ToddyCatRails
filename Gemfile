# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use jquery as the JavaScript library
gem 'jquery-rails'

gem 'jquery-ui-rails'
gem 'slim'
gem 'puma'
gem 'bcrypt-ruby', require: 'bcrypt'
gem 'bson_ext'
